<h1 class="text-center">Sights</h1>

{{#if session.isLoggedIn}}
	<form action="/sights/create" method="GET">	
		<input type="submit" value="Create new sight">	
	</form>
{{/if}}

{{#if errorMessages.length}}
	<div class="bg-primary">
		<p>Couldn't {{operation}} the sights because:</p>
		<ul>
			{{#each errorMessages}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
{{/if}}

{{#if sights.length}}
	<form action="/sights/search" method="GET">	
		<input type="submit" value="Search sights">	
	</form>

	<div class="grid-container"> 
		{{#each sights}}		
			<div>
				<div class="card border bg-gray">					
					<div class="card-header">
						<div class="card-title h5 bg-primary text-center"><a class="text-secondary" href="/sights/{{id}}">{{name}}</a></div>
						<div class="card-subtitle text-gray">{{city}}, {{country}}</div>
					</div>
					<div class="card-body">
						<div class="card-image margin">
   					 <img alt="{{sight.name}},{{sight.name}}" src="data:image/png;base64, {{image}}"  height="24%" width="60%" class="img-responsive p-centered">
 					 </div>
						<p class="bg-secondary text-center">For more information click on the header!</p>
					</div>
				</div>
			</div>
		{{/each}}
	</div>

	<ul class="pagination"> 			
		{{#if pagination.prevPage}}	
			<li class="page-item">
				<a href="/sights?page={{pagination.prevPage}}" class="text-dark bg-gray text-bold">{{pagination.prevPage}}</a>
			</li>
		{{/if}}
		<li class="page-item">
			<a href="/sights?page={{pagination.currentPage}}" class="text-dark bg-gray text-bold">{{pagination.currentPage}}</a>
		</li>
		{{#if pagination.nextPage}}
			<li class="page-item ">
				<a href="/sights?page={{pagination.nextPage}}" class="text-dark bg-gray text-bold">{{pagination.nextPage}}</a>
			</li>
		{{/if}}
	</ul>

{{else}}

	<p class="text-center">Sorry. At the moment no comments available!</p>

{{/if}}

