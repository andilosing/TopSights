<h1 class="text-center">Search Sights</h1>

<form method ="GET" action="/sights">
	<div>
		</div>
			<input type="submit" value="Go back to sights">
	</div>
</form>

<form method ="POST">
	<div>
		<div>
			Name: <input type="text" name="name" value="{{name}}">
		</div>
		<div>
			City: <input type="text" name="city" value="{{city}}" >
		</div>
		<div>
			Country: <input type="text" name="country" value="{{country}}">
		</div> 
		</div>
			<input type="submit" value="Search sights">
	</div>
</form>

{{#if errorMessages.length}}
	<div class="bg-primary">
		<p>Couldn't get the sights because:</p>
		<ul>
			{{#each errorMessages}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
{{/if}}


{{#if sights.length}}
<h1 class="text-center">Here are your search results!</h1>

	<div class="grid-container"> 
		{{#each sights}}		
			<div>
				<div class="card border bg-gray">					
					<div class="card-header">
						<div class="card-title h5 bg-primary text-center"><a class="text-secondary" href="/sights/{{id}}">{{name}}</a></div>
						<div class="card-subtitle text-gray">{{city}}, {{country}}</div>
					</div>
					<div class="card-body">
						<div class="card-image margin">
   						<img alt="{{sight.name}},{{sight.name}}" src="data:image/png;base64, {{image}}"  height="24%" width="60%" class="img-responsive p-centered">
 					 </div>
						<p class="bg-secondary text-center">For more information click on the header!</p>
					</div>
				</div>
			</div>
		{{/each}}
	</div>	
{{else}}

	{{#if performedSearch}}
		<h1 class="text-center">No search results! </h1>
	{{/if}}

{{/if}}