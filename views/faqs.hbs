<h1>FAQ</h1>
<button class="btn btn-primary"><a href="/faq/create ">Create</a></button>

<div class="accordion">

	{{#if faqs.length}}

		<div class="grid-container">
		
			{{#each faqs}}

				<div>
					<div class="accordion border">
						<input type="radio" id="{{id}}" name="accordion-radio" hidden>
						<label class="accordion-header" for="{{id}}">
							<i class="icon icon-arrow-right mr-{{id}}"></i>
							#{{id}}: {{question}}
						</label>
						<div class="accordion-body">
							{{answer}}
							<form action="/faq/delete/{{id}}" method="POST">	
								<input type="submit" value="Delete">	
							</form>
							<a href="/faq/update/{{id}}">Update</a>

						</div>
						
					</div>
				</div>
			{{/each}}
		</div>
	{{else}}

		We have no faq available at the moment. Sorry!

	{{/if}}

	