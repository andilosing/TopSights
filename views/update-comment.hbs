<h1>Update Comment</h1>

{{#if errorMessages.length}}
	<p>Couldn't create the FAQ because:</p>
	<ul>
		{{#each errorMessages}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<form method ="POST">
	<div>
		<div>
			Author: <input type="text" name="author" value="{{comment.author}}">
		</div>
		<div>
			Headline: <input type="text" name="topic" value="{{comment.topic}}">
		</div>
		<div>
			Comment: <textarea  type="text" name="text"  style="height:200px">{{comment.text}}</textarea>	
		</div>
		<div>
			Rating: <input type="number" name="rating" value="{{comment.rating}}">
		</div>
			<input type="submit"  value="Update">
	</div>
</form>