<div class="box">

{{#if sight}}

	<h1>{{sight.name}}</h1>
	<h6>Location: {{sight.city}}, {{sight.country}}</h6>
	<p>{{sight.info}}</p>
	<form action="/sight/delete/{{sight.id}}" method="POST" >	
		<input type="submit" value="Delete">	
	</form>
	<form action="/sight/update/{{sight.id}}" method="GET" >	
		<input type="submit" value="Update">	
	</form>

{{else}}

	<h1>Sight</h1>
	<p>That sight does not exist!</p>

{{/if}}

</div>